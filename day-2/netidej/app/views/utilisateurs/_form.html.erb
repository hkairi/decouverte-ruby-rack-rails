<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_with(model: utilisateur, local: true) do |form| %>
      <% if utilisateur.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(utilisateur.errors.count, "error") %> prohibited this utilisateur from being saved:</h2>

          <ul>
            <% utilisateur.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, id: :utilisateur_email, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :nom %>
        <%= form.text_field :nom, id: :utilisateur_nom, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, id: :utilisateur_password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, id: :utilisateur_password_confirmation, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Enregister', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
